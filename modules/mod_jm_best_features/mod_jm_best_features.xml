<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.0" client="site" method="upgrade">
	<name>MOD_JM_BEST_FEATURES</name>
	<creationDate>01/08/2017</creationDate>
	<author>Joomla-Monster.com</author>
	<copyright>Copyright (C) 2017 Joomla-Monster.com, All rights reserved.</copyright>
	<license> http://www.gnu.org/licenses GNU/GPL</license>
	<authorEmail>artur.kaczmarek@joomla-monster.com</authorEmail>
	<authorUrl>https://joomla-monster.com</authorUrl>
	<version>1.03</version>
	<description>MOD_JM_BEST_FEATURES_DESC</description>
	<files>
			<filename module="mod_jm_best_features">mod_jm_best_features.php</filename>
			<filename>index.html</filename>
			<filename>helper.php</filename>
			<folder>assets</folder>
			<folder>tmpl</folder>
			<folder>language</folder>
			<folder>fields</folder>
	</files>

	<updateservers>
		<server type="extension" priority="1" name="MOD_JM_BEST_FEATURES">https://joomla-monster.com/updates/mod_jm_best_features.xml</server>
	</updateservers>

	<config>
		<fields name="params" addfieldpath="/modules/mod_jm_best_features/fields">

			<fieldset name="basic">

				<field name="items" type="jmelements" label="MOD_JM_BEST_FEATURES_FIELD_ITEMS" description="MOD_JM_BEST_FEATURES_FIELD_ITEMS_DESC" element_name="MOD_JM_BEST_FEATURES_FIELD_ITEM" element_fields="title,url,image_icon,alt,icon,color,text" element_field="title" filter="raw" />

					<field name="title" type="text" default="" label="MOD_JM_BEST_FEATURES_FIELD_TITLE" description="MOD_JM_BEST_FEATURES_FIELD_TITLE_DESC" />
					<field name="url" type="url" default="" label="MOD_JM_BEST_FEATURES_FIELD_LINK" description="MOD_JM_BEST_FEATURES_FIELD_LINK_DESC" />

					<field name="image_icon" type="media" directory="" label="MOD_JM_BEST_FEATURES_FIELD_ICON_IMAGE" />
					<field name="alt" type="text" default="" label="MOD_JM_BEST_FEATURES_FIELD_ICON_IMAGE_ALT" description="MOD_JM_BEST_FEATURES_FIELD_ICON_IMAGE_ALT_DESC" />
					<field name="icon" type="text" default="" label="MOD_JM_BEST_FEATURES_FIELD_ICON" description="MOD_JM_BEST_FEATURES_FIELD_ICON_DESC" />

					<field name="color" type="color" default="" label="MOD_JM_BEST_FEATURES_FIELD_COLOR" description="MOD_JM_BEST_FEATURES_FIELD_COLOR_DESC" />
					<field name="text" type="textarea" default="" label="MOD_JM_BEST_FEATURES_FIELD_TEXT" description="MOD_JM_BEST_FEATURES_FIELD_TEXT_DESC" />

					<field type="spacer" />

					<field name="image_file" type="media" directory="" label="MOD_JM_BEST_FEATURES_FIELD_IMAGE" />

					<field name="view" type="list" default="1" required="true" label="MOD_JM_BEST_FEATURES_FIELD_VIEW" description="MOD_JM_BEST_FEATURES_FIELD_VIEW_DESC">
						<option value="1">MOD_JM_BEST_FEATURES_FIELD_VIEW1</option>
						<option value="2">MOD_JM_BEST_FEATURES_FIELD_VIEW2</option>
						<option value="3">MOD_JM_BEST_FEATURES_FIELD_VIEW3</option>
						<option value="4">MOD_JM_BEST_FEATURES_FIELD_VIEW4</option>
						<option value="5">MOD_JM_BEST_FEATURES_FIELD_VIEW5</option>
					</field>

					<field name="link_icon" type="radio" class="btn-group" default="0" label="MOD_JM_BEST_FEATURES_FIELD_LINK_ICON" description="MOD_JM_BEST_FEATURES_FIELD_LINK_ICON_DESC">
						<option value="0">JNO</option>
						<option value="1">JYES</option>
					</field>

					<field name="span_size" type="list" default="6" required="true" label="MOD_JM_BEST_FEATURES_FIELD_SPAN_SIZE" description="MOD_JM_BEST_FEATURES_FIELD_SPAN_SIZE_DESC">
						<option value="">Please Select</option>
						<option value="1">1</option>
						<option value="2">2</option>
						<option value="3">3</option>
						<option value="4">4</option>
						<option value="5">5</option>
						<option value="6">6</option>
						<option value="7">7</option>
						<option value="8">8</option>
						<option value="9">9</option>
						<option value="10">10</option>
						<option value="11">11</option>
						<option value="12">12</option>
					</field>

					<field name="theme" type="list" default="1" label="MOD_JM_BEST_FEATURES_FIELD_THEME" description="MOD_JM_BEST_FEATURES_FIELD_THEME_DESC">
						<option value="1">MOD_JM_BEST_FEATURES_FIELD_THEME_DEFAULT</option>
						<option value="2">MOD_JM_BEST_FEATURES_FIELD_THEME_OVERRIDE</option>
					</field>

					<field type="note" name="theme_note" class="alert alert-info" label="MOD_JM_BEST_FEATURES_FIELD_THEME_NOTE" description="MOD_JM_BEST_FEATURES_FIELD_THEME_NOTE_DESC" showon="theme:2" />

					<field name="load_fontawesome" type="radio" class="btn-group" default="0" label="MOD_JM_BEST_FEATURES_FIELD_AWESOME" description="MOD_JM_BEST_FEATURES_FIELD_AWESOME_DESC">
						<option value="0">JNO</option>
						<option value="1">JYES</option>
					</field>

			</fieldset>

			<fieldset name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC"
				/>

				<field
					name="moduleclass_sfx"
					type="textarea"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"
					rows="3"
				/>

				<field
					name="cache"
					type="list"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC"
					default="1"
					>
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="text"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC"
					default="900"
				/>

				<field
					name="cachemode"
					type="hidden"
					default="static"
					>
					<option value="static"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
